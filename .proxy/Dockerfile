ARG TRAEFIK_IMAGE_TAG=v2.8.4

FROM traefik:$TRAEFIK_IMAGE_TAG

WORKDIR /app

COPY ./ ./

ENV DOMAIN=traefik.me \
    TRAEFIK_ENTRYPOINTS_HTTPS_HTTP_TLS_DOMAINS_0_MAIN=traefik.me \
    TRAEFIK_ENTRYPOINTS_HTTPS_HTTP_TLS_DOMAINS_0_SANS=*.traefik.me

EXPOSE 80
EXPOSE 443

ENTRYPOINT ["./entrypoint.sh"]
CMD ["traefik"]
